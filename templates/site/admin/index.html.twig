{% extends 'base.html.twig' %}

{% block title %}Josselin Balde - Formations{% endblock %}

{% block body %}
    <div class="content">
        <div class="onglets">
            <ul class="nav nav-tabs nav-fill" id="le-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="formations-tab" data-toggle="tab" href="#formations-list" 
                       role="tab" aria-controls="formations-list" aria-selected="true">Formations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="users-tab" data-toggle="tab" href="#users-list" 
                       role="tab" aria-controls="users-list" aria-selected="false">Membres</a>
                </li>
            </ul>
            <div class="tab-content" id="onglet">
                <div class="tab-pane fade show active" id="formations-list" role="tabpanel" aria-labelledby="formations-tab">
                    {% include('site/admin/list_formations.html.twig') %}
                </div>
                <div class="tab-pane fade" id="users-list" role="tabpanel" aria-labelledby="users-tab">
                    {% include('site/admin/list_users.html.twig') %}
                </div>
            </div>

            {% include 'site/modal.html.twig' %}
        </div>
    </div>
{% endblock %}