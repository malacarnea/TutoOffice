<div class="modal-header">
    <h5 class="modal-title">Informations {{ user.firstname }} {{ user.lastname }}</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <ul>
        <li>Email : {{ user.email }}</li>
        <li>Roles : {{ user.roles ? user.roles|json_encode : '' }}</li>

        <li>Prénom : {{ user.firstname }}
        </li>
        <li>Nom : {{ user.lastname }}
        </li>
        <li>Accès : {{ user.access ? user.access.format('%y year(s), %m month(s), %d day(s)') : '' }}
        </li>
        <li>Date de première connection : {{ user.dateFirstConnect ? user.dateFirstConnect|date('Y-m-d H:i:s') : 'Ne s\'est pas encore connecté.' }}
        </li>
        <li>
            Formations : 
            <ul>
            {% for formation in user.formations %}
                <li>{{ formation.title }}</li>
            {% endfor %}
            </ul>
    </ul>

</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Retour</button>
    <button id="save" type="button" data-action="form" data-url="{{ path('admin.users.edit', {'id': user.id}) }}" data-toggle='modal' data-target="#formBox" class="btn btn-primary">Modifier</button>

</div>