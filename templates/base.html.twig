<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        {# <META HTTP-EQUIV="refresh" CONTENT="2">#}
        <title>{% block title %}Josselin Balde - Formateur indépendant{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <!-- Renders a link tag (if your module requires any CSS)
             <link rel="stylesheet" href="/build/app.css"> -->
        {% endblock %}
    </head>
    <body>
        <div id="global">
            <header>
                <nav>
                    <ul class="nav">
                        <li id="ln_home"><a href="{{ path('accueil') }}">Accueil</a></li>

                        {% block customNav %}
                            <li id="ln_apropos"><a href="#apropos">À propos</a></li>
                            <li id="ln_formations">
                                {% if is_granted("ROLE_TRAINEE") %}
                                    <a href="{{ path('formations') }}">Formations</a>
                                {% elseif is_granted("ROLE_ADMIN") or is_granted("ROLE_TEACHER")%}
                                    <a href="{{ path('admin.index.formations') }}">Formations</a>
                                {% else %}
                                    <a href="#formations">Formations</a>
                                {% endif %}
                            </li>
                        {% endblock %}
                        <li id="ln_connection">
                            {% if is_granted("ROLE_USER") %}
                                <div class="dropdown">
                                    <button class="dropdown-toggle" type="button" id="menu-user" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Mon espace
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="menu-user">
                                        <a href="{{ path('profile') }}" class="dropdown-item">Mon Profil</a>
                                        <a href="{{ path('app_logout') }}" class="dropdown-item">Déconnexion</a>

                                    </div>
                                </div>
                            {% else %}   
                                <a href="{{ path('app_login') }}">Connexion</a>
                            {% endif %}
                        </li>
                    </ul>
                </nav>
            </header>

            <div class="main-grid">

                {% block body %}


                    <footer>
                        <div class="col-1-3">
                            <h6>Informations</h6>
                            <ul class="ul-footer">
                                <li><a href="#">Mentions légales</a></li>
                                <li><a href="#">Règlement</a></li>
                                <li>Copyright © 2019 Josselin Baldé.</li>
                                <li>Tous droits réservés.</li> 
                            </ul>
                        </div>
                        <div class="col-1-3">
                            <h6>Retrouvez moi sur</h6>
                            <ul class="social-link">
                                <li><a href="#">LinkedIn</a></li>
                                <li><a href="#">Totu.com</a></li>
                                <li><a href="#">Ganapati</a></li>
                            </ul>
                            <p>Webdesign : Inkrease Communication - contact@inkrease.design<br/>Développement : Alicia Malacarne - www.amproginfo.fr</p>
                        </div>
                        <div class="col-1-3">
                            <h6>Contact</h6>
                            <ul class="ul-footer">
                                <li>06 87 56 27 29</li>
                                <li>josselin.balde@gmail.com</li>
                                <li>SIRET : 511 543 811 00026</li>
                            </ul>

                        </div>
                    </footer>
                {% endblock %}
            </div>
        </div>
        <!-- <script src="https://code.jquery.com/jquery-3.4.1.js"
                 integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
         crossorigin="anonymous"></script>
         <script src="{{ asset('js/script.js') }}" type="text/javascript"></script>-->
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}

            <!-- Renders app.js & a webpack runtime.js file
                <script src="/build/runtime.js"></script>
                <script src="/build/app.js"></script> -->
        {% endblock %}
    </body>
</html>
