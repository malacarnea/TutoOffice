<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        {# <META HTTP-EQUIV="refresh" CONTENT="2">#}
        <title>{% block title %}Josselin Balde - Formateur indépendant{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <!-- Renders a link tag (if your module requires any CSS)
             <link rel="stylesheet" href="/build/app.css"> -->
        {% endblock %}
    </head>
    <body data-spy="scroll" data-target="#main-navbar" >
        <div id="global">
            <header>
                <nav class="navbar" id="main-navbar" data-spy="affix" >
                    <ul class="nav" >
                        <li id="ln_home"><a href="{{ path('accueil') }}">Accueil</a></li>

                        {% block customNav %}
                            <li id="ln_apropos"><a href="{{ path('accueil')~"#apropos" }}">À propos</a></li>
                            <li id="ln_formations">
                                {% if is_granted("ROLE_TRAINEE") %}
                                    <a href="{{ path('formations') }}">Formations</a>
                                {% elseif is_granted("ROLE_ADMIN") or is_granted("ROLE_TEACHER")%}
                                    <a href="{{ path('admin.index.formations') }}">Formations</a>
                                {% else %}
                                    <a href="{{ path('accueil')~"#formations" }}">Formations</a>
                                {% endif %}
                            </li>
                        {% endblock %}
                        <li id="ln_connection">
                            {% if is_granted("ROLE_USER") %}
                                <div class="dropdown">
                                    <button class="dropdown-toggle" type="button" id="menu-user" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Mon espace
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="menu-user">
                                        <a href="{{ path('profile') }}" class="dropdown-item">Mon Profil</a>
                                        <a href="{{ path('app_logout') }}" class="dropdown-item">Déconnexion</a>

                                    </div>
                                </div>
                            {% else %}   
                                <a href="{{ path('app_login') }}">Connexion</a>
                            {% endif %}
                        </li>
                    </ul>
                </nav>
            </header>

            
                {% block body %}
                    {% block content %}
                    {% endblock %}

                    {{ include("site/footer.html.twig") }}
                {% endblock %}
            </div>
    
        <!-- <script src="https://code.jquery.com/jquery-3.4.1.js"
                 integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
         crossorigin="anonymous"></script>
         <script src="{{ asset('js/script.js') }}" type="text/javascript"></script>-->
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}

            <!-- Renders app.js & a webpack runtime.js file
                <script src="/build/runtime.js"></script>
                <script src="/build/app.js"></script> -->
        {% endblock %}
    </body>
</html>
